<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_permission_layout_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dialog_permission_layout_left"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/dialog_permission_layout_right"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/Dialog_Permission_Title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            tools:text="标题标题标题标题标题标题标题标题标标标" />

        <TextView
            android:id="@+id/dialog_message"
            style="@style/Dialog_Permission_Msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            tools:text="密码长度不符合密码长度不符合密码长度不符合" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_ok"
        style="@style/Dialog_Permission_PositiveButton"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/dialog_permission_layout_left"
        android:paddingRight="@dimen/dialog_permission_layout_right"
        android:text="@string/resume" />

</LinearLayout>